{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "title": "Distribution",
  "description": "A probability distribution to describe the probability of a certain event",
  "type": "object",

  "definitions": {
    "distributionModel": {
      "id": "#/definitions/distributionModel",
      "type": "string",
      "enum": ["multinomial"]
    },
    "numOfExperiments": {
      "id": "#/definitions/numOfExperiments",
      "type": "integer",
      "minimum": 1
    }
  }
}
